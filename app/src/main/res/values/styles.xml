<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/questTopMargin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/quesTextSize</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CityPic">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/cityPicMargin</item>
        <item name="android:layout_height">@dimen/cityPicHeight</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textSize">@dimen/radioTextSize</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RadioButton" parent="RadioGroup">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="RadioButtonCenter" parent="RadioButton">
        <item name="android:layout_marginLeft">@dimen/radioButtonSideMargin</item>
        <item name="android:layout_marginRight">@dimen/radioButtonSideMargin</item>
    </style>

    <style name="CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/checkBoxMarginTop</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:hint">@string/editText_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/checkBoxMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/checkBoxMarginLeftRight</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

</resources>
